<div class="container">
  <div class="row">
    <% data.cities.each do |city| %>
      <div class="col-md-4 col-xs-12">
        <div class="card" style="background-image: url(<%= city.picture %>);">
          <h2><%= city.name %></h2>
          <p><%= city.address %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
